<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Installfest by ReInteractive" %></title>

    <%= stylesheet_link_tag "guides" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial 'header' %>
    <article class="main">
      <aside>
        <h3>Guides</h3>
        <ul>
          <li><%= link_to 'Getting Started',                '/guide/getting_started' %></li>
          <li><%= link_to 'Finishing a Basic Blog',         '/guide/finishing_a_basic_blog' %></li>
          <li><%= link_to 'Testing the Blog',               '/guide/testing_the_blog' %></li>
          <li><%= link_to 'Admin and Markdown',             '/guide/admin_and_markdown' %></li>
          <li><%= link_to 'Understanding Rails Migrations', '/guide/understanding_migrations' %></li>
          <li><%= link_to 'Assets and Errors',              '/guide/assets_and_errors' %></li>
        </ul>
      </aside>
      <article class="guide">
        <%= yield %>
      </article>
    </article>
  </body>
</html>
